  .input-group.row.col-lg-6.col-md-7.col-sm-12.mb-3
    //- form()
    form.form-inline.search-input-group.justify-content-end(action='/rent', method='GET')                      
      input#autocomplete.form-control.col-lg-7.col-md-4.col-sm-12(type='text', name='term', placeholder='Search locate or building', aria-label='Search', value=term)
      button.btn.col-lg-3#rent_search.col-md-3.col-sm-12(type='submit') Search 
  script(src='/javascripts/rent_search.js')

.row.col-lg-10.col-md-10.col-sm-12.col-11.mx-auto.mt-4      
  if (currentUser)
    a.btn.btn-primary(href=`/rent/${currentUser._id}?_method=GET`)
