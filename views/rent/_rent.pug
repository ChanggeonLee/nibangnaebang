script(src='/javascripts/rent_search.js')
.input-group.row.col-lg-9.col-md-12.col-sm-12.mx-auto.mb-3
  //- form()
  form.form-inline.search-input-group.col-lg-11.col-md-12.col-sm-12.justify-content-end(action='/rent', method='GET')                      
    input#autocomplete.form-control.mr-sm-2.col-lg-4.col-md-6.col-sm-8(type='text', name='term', placeholder='Search locate or building', aria-label='Search', value=term)
    button.btn#rent_search.col-lg-2.col-md-2.col-sm-2(type='submit') Search 
  

.row.col-lg-10.col-md-10.col-sm-12.col-11.mx-auto.mt-4      
  if (currentUser)
    a.btn.btn-primary(href=`/rent/${currentUser._id}?_method=GET`)
      | 니방 올리기
|
.row.col-lg-10.col-md-12.col-sm-12.mx-auto.no-gutters.rent_list
  each rent in rents.docs
    if (!rent.sell)
      a.border-4.card.mb-3.col-lg-4.col-md-6.col-sm-12.mt-3.rent_room(href=`/rent/detail/${rent.id}`)
        if rent.img
          img.card-img-top#rentimg(src=rent.img[0], alt='Card image cap')
        else
          img.card-img-top#rentimg( alt='Card image cap')
        .card-body
          p.card-text
            p=rent.locate
            p=rent.detail_address
