.container
  h1.main-title= user.name
        
  dl.row
    dt.col-sm-3 Email
    dd.col-sm-9
      a(href=`mailto:${user.email}`)= user.email

    if user.facebook.id
      dt.col-sm-3 Facebook
      dd.col-sm-9
        img.rounded-circle.facebookimg(src= user.facebook.photo)

    if user.kakao.id
      dt.col-sm-3 Kakao
      dd.col-sm-9
        img.rounded-circle.kakaoimg(src= user.kakao.photo)      

    if user.google.id
      dt.col-sm-3 Google
      dd.col-sm-9
        img.rounded-circle.kakaoimg(src= user.kakao.photo)      